<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<GridPane fx:id="gridPane" alignment="CENTER" hgap="10.0" vgap="10.0"
          xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.shop_laptop2.HelloController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <children>
        <Text text="UserName" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="text1" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Text text="PassWord" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="text2" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button text="Submit" fx:id="button1" style="-fx-background-color: blue; -fx-text-fill: white;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Button text="Clear" fx:id="button2" style="-fx-background-color: blue; -fx-text-fill: white;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </children>
</GridPane>
